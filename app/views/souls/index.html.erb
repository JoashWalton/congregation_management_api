<p id="notice"><%= notice %></p>

<h1>Souls</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Birth date</th>
      <th>Unique identifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @souls.each do |soul| %>
      <tr>
        <td><%= soul.first_name %></td>
        <td><%= soul.middle_name %></td>
        <td><%= soul.last_name %></td>
        <td><%= soul.birth_date %></td>
        <td><%= soul.unique_identifier %></td>
        <td><%= link_to 'Show', soul %></td>
        <td><%= link_to 'Edit', edit_soul_path(soul) %></td>
        <td><%= link_to 'Destroy', soul, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

