<p id="notice"><%= notice %></p>

<h1>Public Talks</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Public talk title</th>
      <th>Public talk note</th>
      <th>Revision date</th>
      <th>File pdf url</th>
      <th>File doc url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @public_talks.each do |public_talk| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= public_talk.number %></td>
        <td><%= public_talk.public_talk_title %></td>
        <td><%= public_talk.public_talk_note %></td>
        <td><%= public_talk.revision_date %></td>
        <td><%= public_talk.file_pdf_url %></td>
        <td><%= public_talk.file_doc_url %></td>
        <td><%= link_to 'Show', public_talk %></td>
        <td><%= link_to 'Edit', edit_public_talk_path(public_talk) %></td>
        <td><%= link_to 'Destroy', public_talk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Public Talk', new_public_talk_path %>
